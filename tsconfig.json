{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs",
    "removeComments": false,
    "declaration": true,
    "outDir": "./typescript",
    "declarationDir": "./types",
    "baseUrl": "./",
    "jsx": "react",
    "allowJs": false,
    // "typeRoots": [
    //   "./lib/@types"
    // ],
    "lib": [
      "dom",
      "es2015"
    ],
    "sourceMap": false,
    "noImplicitAny": false
  },
  "files": [
    "./src/lib/index.ts"
  ],
  "include": [
    "src/lib/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}